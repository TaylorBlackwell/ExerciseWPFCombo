<Window x:Class="ExerciseWPFCombo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExerciseWPFCombo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Rader -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- GroupBox -->
            <RowDefinition Height="Auto"/>
            <!-- Knapp -->
            <RowDefinition Height="Auto"/>
            <!-- ComboBox -->
            <RowDefinition Height="Auto"/>
            <!-- TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- Tom yta -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Kolumner -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- ===== GROUPBOX MED RADIOBUTTONS ===== -->
        <GroupBox Header="Välj alternativ"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10">
            <StackPanel Margin="10">
                <RadioButton x:Name="rbAlternativ1"
            Content="Äppelpaj"
            Margin="5"/>
                <RadioButton x:Name="rbAlternativ2"
            Content="Glass"
            Margin="5"/>
                <RadioButton x:Name="rbAlternativ3"
            Content="Frukt"
            Margin="5"/>
            </StackPanel>
        </GroupBox>

        <!-- ===== KNAPP SOM HÄMTAR VÄRDET ===== -->
        <Button x:Name="CmdHamta"
            Content="Hämta valt alternativ"
            Grid.Row="1"
            Grid.Column="0"
            Width="180"
            Height="35"
            Click="CmdHamta_Click"
            Margin="0,0,0,10"/>
        <!-- ===== COMBOBOX ===== -->
        <ComboBox x:Name="cmbEfterratt"
            Grid.Row="2"
            Grid.Column="0"
            Width="200"
            Height="30"
            Margin="0,10,0,0" SelectionChanged="cmbEfterratt_SelectionChanged">
        </ComboBox>
        <!-- ===== TEXTBOX FÖR UTSKRIFT ===== -->
        <TextBox x:Name="txtResultat"
            Grid.Row="3"
            Grid.Column="0"
            Width="200"
            Height="30"
            Margin="0,10,0,0"
            IsReadOnly="True"/>
    </Grid>
</Window>
